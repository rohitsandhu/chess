{% extends 'base.html.twig' %}

{% block title %}Torneig{% endblock %}

{% block body %}
    <h1>Afegir Jugadors</h1>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th class="th-sm"><i class="bi bi-person"></i> Jugador Blanques</th>
                    <th class="th-sm">Puntuacio</th>
                    <th class="th-sm">Bye?</th>
                    <th class="th-sm">Guanyador?</th>
                    <th class="th-sm">Bye?</th>
                    <th class="th-sm">Puntuacio</th>
                    <th class="th-sm"><i class="bi bi-person-fill"></i>Jugador Negres</th>
                </tr>
                </thead>
                <tbody>

                {% for partida in partides %}
                    <tr>
                        <form method="post">
                            <td>{{ partida.jugadorBlanques }}</td>
                            <td><input type="number" name="puntuacioBlanques" value="0"></td>
                            <td><input type="checkbox" name="byeBlanques"></td>
                            <td><select name="guanyador">
                                    <option value="blanques">Blanques</option>
                                    <option value="negres">Negres</option>
                                    <option value="taules">Taules</option>
                                </select></td>
                            <td><input type="checkbox" name="byeNegres"></td>
                            <td><input type="number" name="puntuacioNegres" value="0"></td>
                            <td>{{ partida.JugadorNegres }}</td>
                        </form>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-1">
        </div>
    </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
